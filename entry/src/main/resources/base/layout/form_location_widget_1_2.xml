<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#FFFFFFFF"
    ohos:remote="true">

    <DirectionalLayout
        ohos:visibility="hide"
        ohos:id="$+id:dl_form_location_widget_disabled"
        ohos:orientation="horizontal"
        ohos:height="match_parent"
        ohos:width="match_parent">

        <Image
            ohos:start_margin="8vp"
            ohos:layout_alignment="vertical_center"
            ohos:height="32vp"
            ohos:width="32vp"
            ohos:image_src="$media:icon_location"
            ohos:scale_mode="stretch"/>

        <Text
            ohos:id="$+id:t_form_location_widget_disabled_explanation"
            ohos:start_margin="12vp"
            ohos:end_margin="12vp"
            ohos:text_alignment="center"
            ohos:layout_alignment="vertical_center"
            ohos:height="match_content"
            ohos:multiple_lines="true"
            ohos:width="match_parent"
            ohos:text="Location permission is not granted."/>
    </DirectionalLayout>

    <StackLayout
        ohos:id="$+id:dl_form_location_widget_container"
        ohos:height="match_parent"
        ohos:width="match_parent">

        <Text
            ohos:layout_alignment="vertical_center"
            ohos:start_margin="8vp"
            ohos:end_margin="8vp"
            ohos:id="$+id:t_form_location_widget_address"
            ohos:text_alignment="center"
            ohos:height="match_content"
            ohos:multiple_lines="true"
            ohos:width="match_parent"
            ohos:hint="Address is loading..."/>

    </StackLayout>
</DependentLayout>